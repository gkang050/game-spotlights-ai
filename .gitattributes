# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.js text
*.ts text
*.json text
*.md text
*.yml text
*.yaml text
*.sh text eol=lf
*.py text
*.html text
*.css text
*.sql text

# Declare files that will always have CRLF line endings on checkout.
*.bat text eol=crlf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.ez binary
*.bz2 binary
*.swp binary
*.jar binary
*.class binary
*.exe binary
*.dll binary
*.so binary
*.pkg binary
*.dmg binary
*.msi binary

# AWS CDK specific
cdk.out/ export-ignore
node_modules/ export-ignore
*.log export-ignore

# Lambda layers and packages
*.zip filter=lfs diff=lfs merge=lfs -text

# Large video files should use Git LFS if needed
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.avi filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
*.mkv filter=lfs diff=lfs merge=lfs -text